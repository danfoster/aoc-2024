{
  "compilerOptions": {
    "target": "esnext",
    "module": "node16",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "src/scripts/**/*"
  ],
  "lib": [
    "esnext",
  ]
}