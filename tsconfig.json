{
  "compilerOptions": {
    "target": "esnext",
    // "module": "nodenext",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    // "moduleResolution": "bundler"
    // "skipLibCheck": true
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "src/scripts/**/*"
  ],
  "lib": [
    "esnext",
  ]
}